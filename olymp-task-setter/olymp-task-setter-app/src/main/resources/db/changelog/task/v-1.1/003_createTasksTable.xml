<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="createTasksTable" author="liman">
        <createTable tableName="tasks" schemaName="task">
            <column name="id" type="${uuid_type}">
                <constraints primaryKey="true"/>
            </column>
            <column name="task_information_id" type="${uuid_type}">
                <constraints referencedTableName="tasks_metainformation"
                             referencedTableSchemaName="task"
                             referencedColumnNames="id"
                             foreignKeyName="fk__task_id__tasks_metainformation_id"
                             nullable="false"/>
            </column>
            <column name="student_id" type="${uuid_type}">
                <constraints referencedTableName="students"
                             referencedTableSchemaName="person"
                             referencedColumnNames="id"
                             foreignKeyName="fk__task_id__student_id"
                             nullable="false"/>
            </column>
            <column name="acceptor_id" type="${uuid_type}">
                <constraints referencedTableName="acceptors"
                             referencedTableSchemaName="person"
                             referencedColumnNames="id"
                             foreignKeyName="fk__task_id__acceptor_id"
                             nullable="false"/>
            </column>
            <column name="status" type="${text_type}">
                <constraints nullable="false"/>
            </column>
            <column name="attempt" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>